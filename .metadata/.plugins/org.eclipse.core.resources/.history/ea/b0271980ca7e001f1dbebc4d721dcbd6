package de.uni_koeln.hki.thaller

import java.util.StringTokenizer;

class Person {
	
	String bio
	String  dateOfBirth
	String  dateOfDeath
	boolean gender
	
	String year
	String month
	String day
	
	
	static transients = [ "year", "month", "day" ]
	
	
	static hasMany = [names:Name, relations:Relation, confessions:Confession,
	locations:Location, works:Work]
	
	static constraints = {
		dateOfBirth(validator:{val, obj ->
			if(val?.matches("[0-9]{3,4}(-[0-9]{2})?(-[0-9]{2})?")) {
				String[] str = val?.split("-")
				int count = str.length
				for (String s : str) {
					switch(count) {
						case 1 : 
							s.length() == 3 || s.length() == 4; 
							System.out.println("case 1");
							break;
						case 2 : 
							s.length() == 2 && Integer.parseInt(s) <= 12;
							System.out.println("case 2"); 
							break;
						case 3 : 
							s.length() == 2 && Integer.parseInt(s) <= 31;
							System.out.println("case 3"); 
							break;
						default: 
							break;
					}
				}
				
				return true
			}
			else {
				return false
			}
			
			
			
			//			if(obj.dateOfDeath != null)
			//			if(val?.compareTo(obj.dateOfDeath) >= 0) {
			//				return false
			//			}
		})
		dateOfDeath(nullable:true)
		bio(maxSize:10000)
	}
	
	
	
}
