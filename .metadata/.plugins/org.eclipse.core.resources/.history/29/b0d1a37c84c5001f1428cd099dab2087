package de.uni_koeln.hs

class Location {
	
	
	String city
	String country
	float latitude 
	float longitude
	
	static belongsTo = Person
	static hasMany = [persons:Person]
	
	static constraints = {
		longitude(blank:true)
		latitude(blank:true)
		city(blank:false)
		country(blank:false)
	}
	
	static mapping = {
		persons joinTable: "person_locations", column: "person_id"
	}
	
	@Override
	String toString() {
		return city+" ("+country+")"
	}
	
}
